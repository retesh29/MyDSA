int countLeaves(Node node) 
    {
         // 
         
         
         if(node == null){
             
             return 0 ;
         }
         
         
         int c = countLeaves(node.left);
         
         if( node.left == null && node.right == null){
             
             return 1;
         }
         
        c+= countLeaves(node.right);
    
        return c;
    }    
